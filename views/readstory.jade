extends storylayout

unless story
	block header
		script.

			"use strict";

			window.addEventListener('load', function(e) {
				//console.log('Loaded');
				/*var newText = "#{chapterText}";
				newText = newText.replace(/&lt;p&gt;/gm, '<p>'); //Create Paragraph Tags
				newText = newText.replace(/&lt;\/p&gt;/gm, '</p>'); //Close Paragraph Tags
