doctype html
html(lang="en")
	head
		script(src='/javascripts/jquery.js')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		title #{title}
		
		block header
			
	body
		div.inline
			a.textLeft.left(id='homeLink', href='/') &#9733;
			if(reader)
				span.divideText.left.topPush Welcome 
					a(href='/reader/#{reader.name}') #{reader.nickname}
				span.divideText.right.topPush.rightPush
					a(href='/logout') Logout
			else
				span.divideText.inline.left.topPush
					a(href='/signin') Sign In
				span.divideText.inline.left.topPush
					a(href='/newreader') New Account
			span.right.topPush.rightPush
				if (reader)
					if(reader.level >= 4)
						span You're an admin! Go here to 
							a(href='/admin') Adminstrate
		block content
