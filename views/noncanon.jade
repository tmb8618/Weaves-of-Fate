extends layout

script(src='../scripts/storiesPage.js')

block content
	h1= title
	div.storyContainer
		if(error)
			p #{error}

		if (chapters)
			each chapt,index in chapters
				a(href='/read/#{storyName}/noncanon/' + index)
					p= chapt.title

		p Do these suck? 
			a(href='/write/#{storyName}/#{chapterIndex}') Write your own!

	//
		a(href='/read/knightquest')
			img(src='/images/')
			p Knight Quest
		a(href='/knightquest/chapters')
			p Upcoming Chapters